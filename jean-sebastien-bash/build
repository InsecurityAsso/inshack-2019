#!/usr/bin/env bash
# file automatically generated by mkctf.

function print {
    (>&2 printf "\x1b[34m${1}\x1b[0m\n")
}

function exit_success {
    (>&2 printf "\x1b[32m- Script succeeded.\x1b[0m\n")
    exit 0
}

function exit_failure {
    (>&2 printf "\x1b[31m- Script failed.\x1b[0m\n")
    exit 1
}

function exit_non_applicable {
    (>&2 printf "\x1b[36m- Script non applicable.\x1b[0m\n")
    exit 2
}

function exit_manual {
    (>&2 printf "\x1b[33m- Script requires a manual operation.\x1b[0m\n")
    exit 3
}

function exit_not_implemented {
    (>&2 printf "\x1b[35m- Script not implemented.\x1b[0m\n")
    exit 4
}

sudo docker build -f Dockerfile_sandbox -t registry-chal.infra.insecurity-insa.fr/insecurity/jean-sebastien-bash-sandbox . && \
sudo docker build -f Dockerfile -t registry.infra.insecurity-insa.fr/insecurity/jean-sebastien-bash . && \
sudo docker push registry-chal.infra.insecurity-insa.fr/insecurity/jean-sebastien-bash-sandbox && \
sudo docker push registry.infra.insecurity-insa.fr/insecurity/jean-sebastien-bash && \
exit_success || exit_failure
